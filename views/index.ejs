<!DOCTYPE html>
<html>
<head>
  <title>AWS DataPipeline Manager</title>
  <link rel="stylesheet" href="/static/css/bootstrap.min.css">
  
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
          <a class="navbar-brand" href="/">AWS DataPipeline Manager</a>
        </div>
      </nav>
      
  <div class="container">
    <h1 class="my-4">AWS DataPipeline Manager</h1>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Pipeline ID</th>
          </tr>
        </thead>
        <tbody>
          <% pipelines.forEach(pipeline => { %>
            <tr>
              <td><a href="/pipeline/<%= pipeline.id %>"><%= pipeline.name %></a></td>
              <td><%= pipeline.id %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <h2>Create a New Pipeline</h2>
    <form action="/create" method="post" class="mt-4">
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <label for="pipelineName">New Pipeline Name:</label>
              <input type="text" name="pipelineName" class="form-control" required>
            </div>
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Create</button>
          </div>
        </div>
      </form>
      
  </div>
  <script src="/static/js/bootstrap.bundle.min.js"></script>
</body>
</html>
